@model Shwallak.Models.Comment

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Readers_Layout.cshtml";
}

<section id="contentSection">
    <div class="row">
        <div class="contact_area">
            <h2>Delete</h2>

            <h3>Are you sure you want to delete this?</h3>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Article
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Article.Title)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Author)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Author)
                    </dd>

                    <dt>
                        Date
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Day)/@Html.DisplayFor(model => model.Month)/@Html.DisplayFor(model => model.Year)
                    </dd>

                    <dt>
                        Hour
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Hour):@Html.DisplayFor(model => model.Minute):@Html.DisplayFor(model => model.Second)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Content)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Content)
                    </dd>

                </dl>


                <table>
                    <tr>
                        <td>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <button type="submit" class="btn btn-theme">Delete</button>
                                </div>
                            }
                        </td>
                        <td>
                            &nbsp;&nbsp;
                        </td>
                        <td>
                            <form action="~/Comments/Details/@Model.CommentID">
                                <button type="submit" class="btn btn-theme">Cancel</button>
                            </form>
                        </td>
                    </tr>
                </table>


            </div>
    </div>
</section>