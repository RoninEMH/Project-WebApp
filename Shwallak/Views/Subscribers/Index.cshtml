@model IEnumerable<Shwallak.Models.Subscriber>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Readers_Layout.cshtml";
}

<head>
    <script type="text/javascript">

        $(document).ready(function () {
            $('.genderSort').hide();
        });

        function hideGender() {
            $(document).ready(function () {
                $('.genderSort').hide();
            });
        }

        function showGender() {
            $(document).ready(function () {
                $('.genderSort').show();
            });
        }
    </script>
</head>
<section id="contentSection">
    <div class="row">
        <div class="single_page">
            <div class="related_post">
                <h2>Subscribers</h2>
                <br />
                <form action="~/Subscribers/Search">
                    <button type="submit" class="btn btn-theme">Search</button>
                </form>
                <br />
                <form name="myForm" action="~/Subscribers/Sort">
                    <button type="submit" class="btn btn-theme">Sort</button>
                    <br />

                    <table>
                        <tr>
                            <td>
                                <input class="radioSort" type="radio" name="sortBy" value="age" checked="checked" onchange="hideGender()" />
                            </td>
                            <td>
                                <h5> &nbsp; By Age</h5>
                            </td>
                            <td>
                                &nbsp; &nbsp;&nbsp;
                            </td>
                            <td>
                                <input class="radioSort" type="radio" name="sortBy" value="nickname" onchange="hideGender()" />
                            </td>
                            <td>
                                <h5>&nbsp; By Nickname</h5>
                            </td>
                            <td>
                                &nbsp; &nbsp;&nbsp;
                            </td>
                            <td>
                                <input class="radioSort" type="radio" name="sortBy" value="gender" onchange="showGender()" />
                            </td>
                            <td>
                                <h5>&nbsp; By Gender</h5>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input class="genderSort" hidden="hidden" type="radio" name="gender" value="1" checked="checked" />
                            </td>
                            <td>
                                <h5 class="genderSort" hidden="hidden">&nbsp; Male First</h5>
                            </td>
                            <td>
                                &nbsp; &nbsp;&nbsp;
                            </td>
                            <td>
                                <input class="genderSort" hidden="hidden" type="radio" name="gender" value="2" />
                            </td>
                            <td>
                                <h5 class="genderSort" hidden="hidden">&nbsp; Female First</h5>
                            </td>
                        </tr>
                    </table>

                </form>
                <br />

                @{
                    List<Shwallak.Models.Subscriber> subscribers = Model.ToList();

                    int i;

                }
                @for (i = 0; subscribers.Count - 3 > i; i += 3)
                {
                    Shwallak.Models.Subscriber subscriber1 = subscribers.ElementAt(i);
                    Shwallak.Models.Subscriber subscriber2 = subscribers.ElementAt(i + 1);
                    Shwallak.Models.Subscriber subscriber3 = subscribers.ElementAt(i + 2);
                    string img1 = "/Content/images/" + subscriber1.Gender + "Person.jpg";
                    string img2 = "/Content/images/" + subscriber2.Gender + "Person.jpg";
                    string img3 = "/Content/images/" + subscriber3.Gender + "Person.jpg";

                    <ul class="spost_nav wow fadeInDown animated">
                        <li>
                            <div class="media">
                                <a class="media-left" href="~/Subscribers/Details/@subscriber1.SubscriberID">

                                    <img src=@img1 alt="">
                                </a>
                                <div class="media-body">
                                    <a class="catg_title" href="~/Subscribers/Details/@subscriber1.SubscriberID">@subscriber1.Nickname </a>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="media">
                                <a class="media-left" href="~/Subscribers/Details/@subscriber2.SubscriberID">
                                    <img src=@img2 alt="">
                                </a>
                                <div class="media-body">
                                    <a class="catg_title" href="~/Subscribers/Details/@subscriber2.SubscriberID">@subscriber2.Nickname </a>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="media">
                                <a class="media-left" href="~/Subscribers/Details/@subscriber3.SubscriberID">
                                    <img src=@img3 alt="">
                                </a>
                                <div class="media-body">
                                    <a class="catg_title" href="~/Subscribers/Details/@subscriber3.SubscriberID">@subscriber3.Nickname </a>
                                </div>
                            </div>
                        </li>
                    </ul>
                }

                <ul class="spost_nav wow fadeInDown animated">
                    @while (i < subscribers.Count)
                    {
                        Shwallak.Models.Subscriber subscriber = subscribers.ElementAt(i);
                        string img = "/Content/images/" + subscriber.Gender + "Person.jpg";
                        <li>
                            <div class="media">
                                <a class="media-left" href="~/Subscribers/Details/@subscriber.SubscriberID">
                                    <img src=@img alt="">
                                </a>
                                <div class="media-body">
                                    <a class="catg_title" href="~/Subscribers/Details/@subscriber.SubscriberID">@subscriber.Nickname </a>
                                </div>
                            </div>
                        </li>
                        i++;
                    }
                </ul>
            </div>
        </div>

    </div>

</section>