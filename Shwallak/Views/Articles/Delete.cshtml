@model Shwallak.Models.Article

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Readers_Layout.cshtml";
}

<section id="contentSection">
    <div class="row">
        <div class="contact_area">

            <h2>Delete</h2>
            
            <h3>Are you sure you want to delete this?</h3>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        writer
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Writer.FullName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>

                    <dt>
                        upload date
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Day)/@Html.DisplayFor(model => model.Month)/@Html.DisplayFor(model => model.Year)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.SubscribersOnly)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SubscribersOnly)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Section)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Section)
                    </dd>

                </dl>

                <table>
                    <tr>
                        <td>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <button type="submit" class="btn btn-theme">Delete</button>
                                </div>
                            }
                        </td>
                        <td>
                            &nbsp;&nbsp;
                        </td>
                        <td>
                            <form action="~/Articles/Details/@Model.ArticleID">
                                <button type="submit" class="btn btn-theme">Cancel</button>
                             </form>
                        </td>
                    </tr>
                </table>
              

              
            </div>

        </div>
    </div>
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
}
